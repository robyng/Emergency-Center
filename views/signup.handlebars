              <option value="https://semantic-ui.com/images/avatar/large/nan.jpg">Nan</option>
              <option value="https://semantic-ui.com/images/avatar2/large/patrick.png">Patrick</option>
              <option value="https://semantic-ui.com//images/avatar/large/steve.jpg">Steve</option>
              <option value="https://semantic-ui.com//images/avatar/large/stevie.jpg">Stevie</option>
              <option value="https://semantic-ui.com/images/avatar/large/veronika.jpg">Veronika</option>
            </select>
          </div>
        </div>
        <button type="submit" class="ui primary button">
          Submit
        </button>
        <button class="ui button">
          Cancel
        </button>
      </form>
    </div>

    <div class="column margin-left">
      <div class="ui hidden divider"></div>
      <div class="ui card">
        <div class="image">
          <img id="image-placeholder" src="https://semantic-ui.com/images/avatar2/large/kristy.png">
        </div>
        <div class="content">
          <a class="header" id="name-placeholder">Kristy</a>
        </div>
      </div>
    </div>
  </div>
</div>

